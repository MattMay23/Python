#Zadanie 4
suma = 0
i = 1
srednia = 0
podaj_wartosc = 1
while podaj_wartosc != 0:
    ile_wartosci = int(input("Podaj ile liczb zamierzasz wpisać: "))
    if ile_wartosci != 0:
        for i in range(0,ile_wartosci):
            podaj_wartosc = int(input("Podaj liczbę: "))
            if podaj_wartosc != 0:
                i = i + 1
                suma = suma + podaj_wartosc
                srednia = suma / i
            elif podaj_wartosc == 0 and podaj_wartosc == str:
                input("Podałeś 0, zatem kończę program")
                break
    print(srednia)
    break
